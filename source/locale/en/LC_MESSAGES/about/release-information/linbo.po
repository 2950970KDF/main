"\n"
"    echo LINBO $bootflag for group win10\n"
"    echo\n"
"\n"
"    set root=\"(hd0,6)\"\n"
"   if [ -e \"$linbo_kernel\" -a -e \"$linbo_initrd\" ]; then\n"
